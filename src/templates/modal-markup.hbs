<img
  class='modal-card-poster'
  src='https://image.tmdb.org/t/p/w300/{{poster_path}}'
  alt='{{original_title}}'
/>
<article class='modal-card'>
  <h2 class='modal-card-title'>{{original_title}}</h2>
  <div class='modal-card-information'>
    <table>
      <tr>
        <td class='left-part'>Vote / Votes</td>
        <td class='right-part'><span class='film-vote'>{{this.vote_average}}</span>
          /
          <span class='film-votes'>{{this.vote_count}}</span></td>
      </tr>
      <tr>
        <td class='left-part'>Popularity</td>
        <td class='right-part'>{{this.popularity}}</td>
      </tr>
      <tr>
        <td class='left-part'>Original Title</td>
        <td class='right-part'>{{this.original_title}}</td>
      </tr>
      <tr>
        <td class='left-part'>Genre</td>
        <td class='right-part'>
          <div>{{#each genres}}
              {{#unless @last}}<span>{{this}}, </span>{{/unless}}
              {{#if @last}}<span>{{this}}</span>{{/if}}
            {{/each}}
          </div>
        </td>
      </tr>
    </table>
  </div>
  <h3 class='about-title'>About</h3>
  <p class='about-text'>{{overview}}</p>
  <div class='modal-buttons'>
    <button class='watched-button'>add to watched</button>
    <button class='queue-button'>add to queue</button>
  </div>
</article>