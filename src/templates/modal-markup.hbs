<img
  class='modal-card-poster'
  src='https://image.tmdb.org/t/p/w500/{{poster_path}}'
  alt='{{original_title}}'
/>
<article class='modal-card'>
  <div class='modal-card-text'>
    <h2 class='modal-card-title'>{{title}}</h2>
    <div class='modal-card-information'>
      <ul class='left-part'>
        <li>Vote / Votes</li>
        <li>Popularity</li>
        <li>Original Title</li>
        <li>Genre</li>
      </ul>
      <ul class='right-part'>
        <li>
          <span class='film-vote'>{{vote_average}}</span>
          <span class='left-column'> / </span>
          <span class='film-votes'>{{vote_count}}</span>
        </li>
        <li>{{popularity}}</li>
        <li class='film-original-title'>{{original_title}}</li>
        <li class='film-genres'>
          {{#each genres}}<span class='genres-punctuation'>{{this.name}}</span>{{/each}}
        </li>
      </ul>
    </div>
    <h3 class='about-title'>About</h3>
    <p class='about-text'>{{overview}}</p>
    <div class='modal-buttons'>
      <button class='watched-button'>add to watched</button>
      <button class='queue-button'>add to queue</button>
    </div>

  </div>
</article>